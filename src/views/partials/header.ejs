<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>
    <%= title %> | Tech Dashboard
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/vendor/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <link href="/css/header-style.css" rel="stylesheet">
</head>

<body class="<%= (title === 'Iniciar sesión' || title === '404 - Página no encontrada') ? 'login-page' : 'sidebar-mode' %>">
  <% if (typeof usuario !=='undefined' && usuario) { %>
  <!-- NAVBAR CLÁSICO MODERNIZADO (Superior) -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark classic-navbar" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%) !important;">
    <div class="container-fluid px-4">
      <div class="d-flex align-items-center">
        <% if (title !=='Iniciar sesión' && title !=='Dashboard' ) { %>
        <button class="btn btn-outline-light btn-sm me-3" onclick="history.back()" title="Volver atrás">
          <i class="bi bi-arrow-left"></i>
        </button>
        <% } %>
        <!--
              <a class="navbar-brand d-flex align-items-center fw-semibold" href="/dashboard">
                <i class="bi bi-cpu text-primary fs-4 me-2"></i>
                <span>Tech Dashboard</span>
              </a>-->
        <a class="btnjump navbar-brand d-flex align-items-center fw-semibold" href="/dashboard">
          <img src="/icon/icon.ico" alt="Tech Icon" width="45" height="45" class="me-2" />
          <span class="d-none d-lg-inline">Tech Dashboard</span>
        </a>

      </div>

      <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mx-auto">
          <li class="nav-item">
            <a class="nav-link px-3 py-2 rounded <%= title === 'Trabajos' ? 'active bg-primary bg-opacity-25' : '' %>" href="/trabajos">
              <i class="bi bi-tools"></i>
              <span class="ms-1">Trabajos</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link px-3 py-2 rounded <%= title === 'Clientes' ? 'active bg-primary bg-opacity-25' : '' %>" href="/clientes">
              <i class="bi bi-people"></i>
              <span class="ms-1">Clientes</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link px-3 py-2 rounded <%= title === 'Categorías' ? 'active bg-primary bg-opacity-25' : '' %>" href="/categorias">
              <i class="bi bi-tags"></i>
              <span class="ms-1">Categorías</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link px-3 py-2 rounded <%= title === 'Estados' ? 'active bg-primary bg-opacity-25' : '' %>" href="/estados">
              <i class="bi bi-flag"></i>
              <span class="ms-1">Estados</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link px-3 py-2 rounded <%= title === 'Urgencias' ? 'active bg-primary bg-opacity-25' : '' %>" href="/urgencias">
              <i class="bi bi-exclamation-circle"></i>
              <span class="ms-1">Urgencias</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link px-3 py-2 rounded <%= title === 'Herramientas' ? 'active bg-primary bg-opacity-25' : '' %>" href="/herramientas">
              <i class="bi bi-file-earmark-excel"></i>
              <span class="ms-1">Herramientas</span>
            </a>
          </li>
        </ul>

        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
              <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 36px; height: 36px;">
                <span class="text-white fw-semibold">
                  <%= usuario.nombre.charAt(0).toUpperCase() %>
                </span>
              </div>
              <span class="d-none d-sm-inline">
                <%= usuario.nombre %>
              </span>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end shadow">
              <li>
                <a class="dropdown-item" href="/usuarios/perfil">
                  <i class="bi bi-person me-2"></i>Mi Perfil
                </a>
              </li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li>
                <a class="dropdown-item" href="/trabajos/calendario">
                  <i class="bi bi-calendar3 me-2"></i> Calendario
                </a>
              </li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li>
                <a class="dropdown-item text-danger" href="/logout">
                  <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                </a>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- SIDEBAR MODERNO (Lateral) -->
  <aside class="modern-sidebar" id="modernSidebar">
    <div class="sidebar-brand-section">
      <!--
        <a href="/dashboard" class="sidebar-brand">
          <i class="bi bi-cpu"></i>
          <span>Tech Dashboard</span>
        </a>-->

      <a href="/dashboard" class="btnjump sidebar-brand d-flex align-items-center">
        <span></span>
        <img src="/icon/icon.ico" alt="JP" width="45" height="45" class="me-2" />
        <span>Tech Dashboard</span>
      </a>

    </div>
    <nav class="sidebar-nav">
      <div class="sidebar-nav-item">
        <a class="sidebar-nav-link <%= title === 'Trabajos' ? 'active' : '' %>" href="/trabajos">
          <i class="bi bi-tools"></i>
          <span>Trabajos</span>
        </a>
      </div>

      <div class="sidebar-nav-item">
        <a class="sidebar-nav-link <%= title === 'Calendario' ? 'active' : '' %>" href="/trabajos/calendario">
          <i class="bi bi-calendar3"></i>
          <span>Calendario</span>
        </a>
      </div>

      <div class="sidebar-nav-item">
        <a class="sidebar-nav-link <%= title === 'Dashboard' ? 'active' : '' %>" href="/dashboard">
          <i class="bi bi-speedometer2"></i>
          <span>Dashboard</span>
        </a>
      </div>
      <div class="sidebar-nav-item">
        <a class="sidebar-nav-link <%= title === 'Clientes' ? 'active' : '' %>" href="/clientes">
          <i class="bi bi-people"></i>
          <span>Clientes</span>
        </a>
      </div>
      <div class="sidebar-nav-item">
        <a class="sidebar-nav-link <%= title === 'Categorías' ? 'active' : '' %>" href="/categorias">
          <i class="bi bi-tags"></i>
          <span>Categorías</span>
        </a>
      </div>
      <div class="sidebar-nav-item">
        <a class="sidebar-nav-link <%= title === 'Estados' ? 'active' : '' %>" href="/estados">
          <i class="bi bi-flag"></i>
          <span>Estados</span>
        </a>
      </div>
      <div class="sidebar-nav-item">
        <a class="sidebar-nav-link <%= title === 'Urgencias' ? 'active' : '' %>" href="/urgencias">
          <i class="bi bi-exclamation-circle"></i>
          <span>Urgencias</span>
        </a>
      </div>
      <div class="sidebar-nav-item">
        <a class="sidebar-nav-link <%= title === 'Herramientas' ? 'active' : '' %>" href="/herramientas">
          <i class="bi bi-file-earmark-excel"></i>
          <span>Herramientas</span>
        </a>
      </div>
    </nav>
  </aside>

  <!-- Header moderno para sidebar -->
  <header class="modern-header" id="modernHeader">
    <div class="header-content">
      <div class="header-left">
        <button class="sidebar-toggle" id="sidebarToggle" title="Colapsar/Expandir menú">
          <i class="bi bi-list"></i>
        </button>
        <% if (title !=='Dashboard' && title !=='Iniciar sesión' ) { %>
        <button class="btn btn-sm btn-outline-secondary" onclick="history.back()">
          <i class="bi bi-arrow-left"></i> Atrás
        </button>
        <% } %>
        <h5 class="mb-0 d-none d-md-block">
          <%= title %>
        </h5>
      </div>

      <div class="btnjump user-menu">
        <div class="dropdown">
          <button class="user-dropdown" data-bs-toggle="dropdown">
            <div class="user-avatar">
              <%= usuario.nombre.charAt(0).toUpperCase() %>
            </div>
            <span class="d-none d-sm-inline">
              <%= usuario.nombre %>
            </span>
            <i class="bi bi-chevron-down"></i>
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li>
              <a class="dropdown-item" href="/usuarios/perfil">
                <i class="bi bi-person me-2"></i> Mi Perfil
              </a>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>
            <li>
              <a class="dropdown-item" href="/trabajos/calendario">
                <i class="bi bi-calendar3 me-2"></i> Calendario
              </a>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>
            <li>
              <a class="dropdown-item text-danger" href="/logout">
                <i class="bi bi-box-arrow-right me-2"></i> Cerrar Sesión
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </header>

  <!-- Backdrop para móvil -->
  <div class="sidebar-backdrop" id="sidebarBackdrop"></div>

  <!-- Botón flotante para cambiar layout -->
  <button class="layout-toggle" id="layoutToggle" title="Cambiar diseño de menú">
    <i class="bi bi-layout-sidebar" id="layoutIcon"></i>
    <span class="layout-tooltip">Cambiar a menú superior</span>
  </button>

  <!-- Main content -->
  <main class="main-content" id="mainContent">
    <div class="container-fluid">
      <% } else { %>
      <!-- Header simple para login -->
      <nav class="navbar navbar-light bg-white shadow-sm">
        <div class="container">
          <a class="navbar-brand" href="/">
            <i class="bi bi-cpu text-primary"></i> Tech Dashboard
          </a>
        </div>
      </nav>
      <div class="container mt-4">
        <% } %>