<%- include('../partials/header', { title }) %>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Clientes</h1>

    <!-- Botones de vista (solo en desktop) -->
    <div class="btn-group d-none d-lg-flex" role="group">
      <button type="button" class="btn btn-outline-secondary btn-sm active" id="viewTable" title="Vista tabla">
        <i class="bi bi-list-ul"></i>
      </button>
      <button type="button" class="btn btn-outline-secondary btn-sm" id="viewCards" title="Vista tarjetas">
        <i class="bi bi-grid-3x2-gap"></i>
      </button>
    </div>
  </div>

  <!-- Barra de búsqueda y botón nuevo cliente -->
  <div class="row mb-3 align-items-center">
    <div class="col-12 col-md-6 col-lg-4 mb-2 mb-md-0">
      <form class="d-flex w-100" method="get">
        <input type="text" name="q" value="<%= q || '' %>" placeholder="Buscar cliente..."
          class="form-control flex-grow-1">
        <button class="btn btn-outline-primary ms-2" type="submit">
          <i class="bi bi-search"></i>
        </button>
      </form>
    </div>
    <div class="col-12 col-md-6 col-lg-8 text-start text-md-end">
      <a href="/clientes/nuevo" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Nuevo Cliente
      </a>
    </div>
  </div>

  <!-- Tooltip adaptable -->
  <div id="customTooltip" class="card shadow-sm position-fixed p-2 bg-light border"
    style="display: none; width: 40vw; max-width: 600px; min-width: 250px; z-index: 9999;"></div>

  <!-- Vista de TABLA (desktop) - MANTENIENDO EL ESTILO ORIGINAL -->
  <div class="d-none d-lg-block" id="tableView">
    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Contacto Principal</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% clientes.forEach((cliente, index)=> { %>
            <tr>
              <td>
                <a href="/clientes/<%= cliente.id %>"
                  class="enlace-efecto fw-bold text-dark text-decoration-none enlace-lupa" style="cursor:pointer;"
                  data-descripcion="<%= cliente.nombre %>">
                  <i class="bi bi-search"></i>
                  <%= cliente.nombre %>
                </a>
              </td>
              <td>
                <% if (cliente.telefono) { %>
                  <div class="d-flex align-items-center">
                    <i class="bi bi-telephone text-muted me-2"></i>
                    <span id="tel-<%= index %>">
                      <%= cliente.telefono %>
                    </span>
                    <button type="button" class="btn btn-sm btn-light copy-btn ms-auto" data-copy="#tel-<%= index %>"
                      title="Copiar">
                      <i class="bi bi-clipboard"></i>
                    </button>
                  </div>
                  <% } else { %>
                    <span class="text-muted">-</span>
                    <% } %>
              </td>
              <td>
                <% if (cliente.email) { %>
                  <div class="d-flex align-items-center">
                    <i class="bi bi-envelope text-muted me-2"></i>
                    <span id="email-<%= index %>">
                      <%= cliente.email %>
                    </span>
                    <button type="button" class="btn btn-sm btn-light copy-btn ms-auto" data-copy="#email-<%= index %>"
                      title="Copiar">
                      <i class="bi bi-clipboard"></i>
                    </button>
                  </div>
                  <% } else { %>
                    <span class="text-muted">-</span>
                    <% } %>
              </td>
              <td>
                <% if (cliente.contacto && cliente.contacto_tipo) { %>
                  <div class="d-flex align-items-center">
                    <span class="badge bg-secondary me-2">
                      <% if (cliente.contacto_tipo==='whatsapp' ) { %>
                        <i class="bi bi-whatsapp"></i> WhatsApp
                        <% } else if (cliente.contacto_tipo==='instagram' ) { %>
                          <i class="bi bi-instagram"></i> Instagram
                          <% } else if (cliente.contacto_tipo==='email' ) { %>
                            <i class="bi bi-envelope"></i> Email
                            <% } else if (cliente.contacto_tipo==='telefono' ) { %>
                              <i class="bi bi-telephone"></i> Teléfono
                              <% } else if (cliente.contacto_tipo==='presencial' ) { %>
                                <i class="bi bi-person-check"></i> Presencial
                                <% } %>
                    </span>
                    <small class="text-muted" id="contacto-<%= index %>">
                      <%= cliente.contacto %>
                    </small>
                    <button type="button" class="btn btn-sm btn-light copy-btn ms-auto"
                      data-copy="#contacto-<%= index %>" title="Copiar">
                      <i class="bi bi-clipboard"></i>
                    </button>
                  </div>
                  <% } else { %>
                    <span class="text-muted">Sin definir</span>
                    <% } %>
              </td>
              <td>
                <a href="/clientes/<%= cliente.id %>/editar" class="btn btn-sm btn-primary me-1" title="Editar">
                  <i class="bi bi-pencil"></i>
                </a>
                <form action="/clientes/<%= cliente.id %>/eliminar" method="post" style="display:inline;">
                  <button class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar cliente?')" title="Eliminar">
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Vista de CARDS (desktop) - USANDO EL MISMO ESTILO QUE YA TIENES EN MÓVIL -->
  <div class="d-none" id="cardsView">
    <div class="row g-3">
      <% clientes.forEach((cliente, index)=> { %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card shadow-sm border-0">
            <div class="card-body">
              <div class="d-flex align-items-start mb-3">
                <i class="bi bi-person-circle me-3 text-primary" style="font-size:2.5rem;"></i>
                <div class="flex-grow-1">
                  <a href="/clientes/<%= cliente.id %>"
                    class="fw-bold text-dark text-decoration-none enlace-lupa d-block mb-1" style="cursor:pointer;"
                    data-descripcion="<%= cliente.nombre %>">
                    <%= cliente.nombre %>
                  </a>

                  <!-- Información de contacto -->
                  <div class="small text-muted">
                    <% if (cliente.telefono) { %>
                      <div><i class="bi bi-telephone"></i>
                        <%= cliente.telefono %>
                      </div>
                      <% } %>
                        <% if (cliente.email) { %>
                          <div><i class="bi bi-envelope"></i>
                            <%= cliente.email %>
                          </div>
                          <% } %>
                  </div>
                </div>
              </div>

              <!-- Contacto principal -->
              <% if (cliente.contacto && cliente.contacto_tipo) { %>
                <div class="mb-3 p-2 bg-light rounded">
                  <small class="text-muted d-block mb-1">Contacto principal:</small>
                  <span class="badge bg-secondary">
                    <% if (cliente.contacto_tipo==='whatsapp' ) { %>
                      <i class="bi bi-whatsapp"></i> WhatsApp
                      <% } else if (cliente.contacto_tipo==='instagram' ) { %>
                        <i class="bi bi-instagram"></i> Instagram
                        <% } else if (cliente.contacto_tipo==='email' ) { %>
                          <i class="bi bi-envelope"></i> Email
                          <% } else if (cliente.contacto_tipo==='telefono' ) { %>
                            <i class="bi bi-telephone"></i> Teléfono
                            <% } else if (cliente.contacto_tipo==='presencial' ) { %>
                              <i class="bi bi-person-check"></i> Presencial
                              <% } %>
                  </span>
                  <span class="ms-2">
                    <%= cliente.contacto %>
                  </span>
                </div>
                <% } %>

                  <div class="d-flex gap-2">
                    <a href="/clientes/<%= cliente.id %>" class="btn btn-sm btn-outline-primary flex-fill">
                      <i class="bi bi-eye"></i> Ver
                    </a>
                    <a href="/clientes/<%= cliente.id %>/editar" class="btn btn-sm btn-primary flex-fill">
                      <i class="bi bi-pencil"></i> Editar
                    </a>
                    <form action="/clientes/<%= cliente.id %>/eliminar" method="post" class="flex-fill">
                      <button class="btn btn-sm btn-danger w-100" onclick="return confirm('¿Eliminar cliente?')">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                  </div>
            </div>
          </div>
        </div>
        <% }) %>
    </div>
  </div>

  <!-- Mensaje si no hay clientes -->
  <% if (clientes.length===0) { %>
    <div class="text-center py-5">
      <i class="bi bi-people" style="font-size: 4rem; color: #dee2e6;"></i>
      <p class="text-muted mt-3">
        <% if (q) { %>
          No se encontraron clientes con "<%= q %>"
            <% } else { %>
              No hay clientes registrados aún
              <% } %>
      </p> <a href="/clientes/nuevo" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Agregar primer cliente
      </a>
    </div>
    <% } %>

      <script src="/js/btnCopy.js"></script>
      <script src="/js/Tooltip.js"></script>
      <%- include('../partials/footer') %>