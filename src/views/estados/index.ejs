<%- include('../partials/header', { title }) %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-flag"></i> Estados</h1>

    <div class="d-flex gap-2 align-items-center">
      <!-- Botones de vista (solo en desktop) -->
      <div class="btn-group d-none d-lg-flex" role="group">
        <button type="button" class="btn btn-outline-secondary btn-sm active" id="viewTable" title="Vista tabla">
          <i class="bi bi-list-ul"></i>
        </button>
        <button type="button" class="btn btn-outline-secondary btn-sm" id="viewCards" title="Vista tarjetas">
          <i class="bi bi-grid-3x2-gap"></i>
        </button>
      </div>
      
      <!-- Botón nuevo estado -->
      <a href="/estados/nuevo" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Nuevo Estado
      </a>
    </div>
  </div>

  <!-- Vista de TABLA (desktop) -->
  <div class="d-none d-lg-block" id="tableView">
    <div class="card shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th class="ps-4">#</th>
                <th>Nombre</th>
                <th>Color</th>
                <th>Icono</th>
                <th>Vista Previa</th>
                <th class="text-end pe-4">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% estados.forEach((est, index) => { %>
                <tr>
                  <td class="ps-4">
                    <span class="badge bg-secondary"><%= index + 1 %></span>
                  </td>
                  <td>
                    <div class="d-flex align-items-center">
                      <i class="<%= est.icono || 'bi bi-flag' %> me-2" 
                         style="color: <%= est.color %>; font-size: 1.2rem;"></i>
                      <span class="fw-semibold"><%= est.nombre %></span>
                    </div>
                  </td>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="color-preview me-2" 
                           style="width: 24px; height: 24px; background-color: <%= est.color %>; 
                                  border-radius: 4px; border: 1px solid #dee2e6;"></div>
                      <code class="small"><%= est.color %></code>
                    </div>
                  </td>
                  <td>
                    <div class="d-flex align-items-center">
                      <i class="<%= est.icono || 'bi bi-flag' %> me-2" 
                         style="font-size: 1.5rem;"></i>
                      <code class="small text-muted"><%= est.icono || 'bi bi-flag' %></code>
                    </div>
                  </td>
                  <td>
                    <span class="badge" style="background-color: <%= est.color %>; padding: 8px 12px;">
                      <i class="<%= est.icono || 'bi bi-flag' %> me-1"></i>
                      <%= est.nombre %>
                    </span>
                  </td>
                  <td class="text-end pe-4">
                    <div class="btn-group" role="group">
                      <a href="/estados/<%= est.id %>/editar" 
                         class="btn btn-sm btn-outline-primary" 
                         title="Editar">
                        <i class="bi bi-pencil"></i>
                      </a>
                      <form action="/estados/<%= est.id %>/eliminar" method="post" style="display:inline;">
                        <button class="btn btn-sm btn-outline-danger" 
                                onclick="return confirm('¿Estás seguro de eliminar este estado?')" 
                                title="Eliminar">
                          <i class="bi bi-trash"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Vista de CARDS -->
  <div class="d-none" id="cardsView">
    <div class="row g-3">
      <% estados.forEach((est, index) => { %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
              <!-- Header de la tarjeta -->
              <div class="d-flex align-items-start mb-3">
                <div class="icon-wrapper p-3 rounded-3 me-3" 
                     style="background-color: <%= est.color %>15;">
                  <i class="<%= est.icono || 'bi bi-flag' %>" 
                     style="color: <%= est.color %>; font-size: 2rem;"></i>
                </div>
                <div class="flex-grow-1">
                  <h5 class="mb-1"><%= est.nombre %></h5>
                  <span class="badge bg-secondary">Orden #<%= index + 1 %></span>
                </div>
              </div>

              <!-- Detalles -->
              <div class="mb-3">
                <div class="d-flex align-items-center mb-2">
                  <span class="text-muted me-2">Color:</span>
                  <div class="color-preview me-2" 
                       style="width: 20px; height: 20px; background-color: <%= est.color %>; 
                              border-radius: 3px; border: 1px solid #dee2e6;"></div>
                  <code class="small"><%= est.color %></code>
                </div>
                <div class="d-flex align-items-center">
                  <span class="text-muted me-2">Icono:</span>
                  <code class="small"><%= est.icono || 'bi bi-flag' %></code>
                </div>
              </div>

              <!-- Vista previa -->
              <div class="p-3 bg-light rounded-3 mb-3 text-center">
                <span class="badge" style="background-color: <%= est.color %>; padding: 10px 16px; font-size: 0.9rem;">
                  <i class="<%= est.icono || 'bi bi-flag' %> me-1"></i>
                  <%= est.nombre %>
                </span>
              </div>

              <!-- Acciones -->
              <div class="d-flex gap-2">
                <a href="/estados/<%= est.id %>/editar" class="btn btn-sm btn-primary flex-fill">
                  <i class="bi bi-pencil"></i> Editar
                </a>
                <form action="/estados/<%= est.id %>/eliminar" method="post" class="flex-fill">
                  <button class="btn btn-sm btn-danger w-100" 
                          onclick="return confirm('¿Estás seguro de eliminar este estado?')">
                    <i class="bi bi-trash"></i> Eliminar
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Mensaje si no hay estados -->
  <% if (estados.length === 0) { %>
    <div class="text-center py-5">
      <i class="bi bi-flag" style="font-size: 4rem; color: #dee2e6;"></i>
      <p class="text-muted mt-3">
        No hay estados registrados aún
      </p>
      <a href="/estados/nuevo" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Agregar primer estado
      </a>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>